<div class="navbar-wagon">
  <!-- Logo -->
  <%= link_to root_path, class: "navbar-wagon-brand" do %>
    <%= image_tag "logo.png" %>
  <% end %>

  <!-- Search form -->
  <div class="search-bar-wrapper hidden-xs hidden-sm">
    <%= form_tag('pages#home', method: :get, class: "navbar-wagon-search") do %>
      <i class="fa fa-search"></i>
      <%= text_field_tag :search, params[:search], class: "navbar-wagon-search-input" %>
    <% end %>
    <!-- <form action="" class="navbar-wagon-search">
      <i class="fa fa-search"></i>
      <input type="text" class="navbar-wagon-search-input">
    </form>
 -->  </div>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right">

    <!-- Different navigation if login or not -->
    <div class="nav navbar-nav navbar-right">
      <% if user_signed_in? %>

        <!-- Profile picture and dropdown -->
        <div class="navbar-wagon-item">
          <div class="dropdown">
            <%= image_tag "http://lorempixel.com/50/50/people/", class: "avatar-bordered dropdown-toggle", id:"navbar-wagon-menu", "data-toggle" => "dropdown" %>
            <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
              <li>
                <%= link_to edit_user_registration_path do %>
                  <%= t(".profile", default: "Edit Profile") %>
                <% end %>
              </li>
              <li>
                <%= link_to destroy_user_session_path, method: :delete do %>
                  <%= t(".sign_out", default: "Log out") %>
                <% end %>
              </li>
              <hr>

            <% if current_user.schools.any? %>

              <li>
                <%= link_to "My Schools", schools_path %>
              </li>
            <% else %>
              <li>
                <%= link_to "Become a Partners", new_school_path %>
              </li>
            <% end %>
            </ul>
          </div>
        </div>
      <% else %>
        <%= link_to "Sign Up", new_user_registration_path, {class: "navbar-wagon-item navbar-wagon-link"} %>
        <%= link_to "Log In", new_user_session_path, {class: "navbar-wagon-item navbar-wagon-link"} %>

      <% end %>
   </div>
  </div>
</div>
