<% title @school.name %>
<div class="row lead">
  <div class="col-md-12"><h1><%= @school.name %></h1>
    <hr>
  </div>
</div>
<div class="row show-page">
  <div class="col-md-4 ">
    <% @school.photos.each do |photo| %>
    <%= cl_image_tag photo.path, width: 350, height: 300, class: "show-img", crop: :fill %>
    <% end %>
  </div>
  <div class="col-md-8">
    <div class="row">
      <h4 class="col-md-3">About:</h4><p class="col-md-8"><%= @school.about %></p>
    </div>
    <hr>
    <div class="row">
      <h4 class="col-md-3">Phone: </h4><p class="col-md-6"><%= @school.phone %></p>
    </div>
    <hr>
    <div class="row">
      <h4 class="col-md-3">Website: </h4><p class="col-md-6"><%= link_to @school.website, "@school.website" %></p>
    </div>
  </div>
  <div class="col-md-12">
    <hr>
    <% if current_user.schools.any? %>
    <button type="button" class="btn btn-brand"><%= link_to "Edit School Info", edit_school_path, class: "btn btn-brand"%>
    </button>
    <button type="button" class="btn btn-brand">
      <%= link_to "Add New Lesson", new_school_lesson_path(@school) , class: "btn btn-brand" %>
    </button>
    <% else %>
    <p><%= link_to "Become a Partners", new_school_path %>
    </p>
    <% end %>
  </div>
</div>
<hr>
