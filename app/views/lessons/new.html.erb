<%= simple_form_for([@school, @lesson]) do |f| %>
  <%= f.error_notification %>

  <%= f.input :name %>
  <%= f.input :description %>
  <%= f.input :equipment_provided %>
  <%= f.input :equipment_required %>
  <%= f.input :difficulty %>
  <%= f.input :cancellation_policy %>
  <%= f.association :sport, value: Sport.all %>

  <%= f.button :submit, class: "btn btn-outline" %>
<% end %>
